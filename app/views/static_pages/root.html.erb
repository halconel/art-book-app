<script id="bootstrap-current-user" type="text/javascript">
  <% if logged_in? %>
    window.currentUser = <%= render(
      partial: 'api/users/user',
      formats: [:json, :html],
      locale: [:en, :ru],
      handlers: [:erb, :builder, :raw, :ruby, :coffee, :jbuilder],
      locals: { user: current_user }).html_safe %>
  <% end %>
</script>

